{{#if (eq gamemode "singleplayer")}}
  {{#if (eq gamestate "0")}}
    <div class="container">
      <div class="inbl">
        <a href {{action "nextGamestateSingleplayer" 1 1}}><img src="./assets/images/play.png" alt="play" class="playButton"></a>
      </div>
    </div>
  {{/if}}

  {{#if (eq gamestate "1")}}
    <br>
    <div class="huge">
      Aantal behaalde punten:<br>
      {{model.pointsOne}} punten <br>
      {{username1}}<br>
    </div>
    <div class="footer navbar-fixed-bottom">
      <div class="support-img">
        {{#link-to "application"}}
          <a href {{action "stop"}}><img src="./assets/images/Stop.svg" alt="stop" class="back"></a>
        {{/link-to}}
      </div>
    </div>
  {{/if}}
  {{#if (eq gamestate "2")}}
    <div class="end">
      Je hebt {{model.pointsOne}} punten behaald.<br>Bedankt voor het spelen!<br>Wil je opnieuw spelen?
    </div>
    <br>
    <div class="container">
      <div class="inbl">
        <a href {{action "replaySingle"}}><img src="./assets/images/Yes.svg" alt="yes"class="yesNo"></a>
        <a href {{action "homepage"}}><img src="./assets/images/No.svg" alt="no" class="yesNo"></a>
      </div>
    </div>
    <br>
  {{/if}}

{{else}}

  {{#if (eq gamestate "0")}}
    <div class="container">
      <div class="inbl">
        {{#if (not-eq username1 username2)}}
          {{#if (and username1 username2)}}
            <a href {{action "nextGamestateMultiplayer" 1 2}}><img src="./assets/images/play.png" alt="play" class="imageSize"></a>
          {{else}}
            <img src="./assets/images/play.png" alt="play" class="imageSize">
          {{/if}}
        {{else}}
          <img src="./assets/images/play.png" alt="play" class="imageSize">
        {{/if}}
      </div>
    </div>
    <br>
    <div class="container">
      <div class="inbl">
        {{input type="text" placeholder="Speler 1" value=username1 class="input"}}
        {{input type="text" placeholder="Speler 2" value=username2 class="input"}}
      </div>
    </div>
  {{/if}}

  {{#if (eq gamestate "1")}}
    <br>
    <div class="container">
      <div class= {{if (eq model.activePlayer 1) "score blue" "score"}}>
        <div class="multiScore">
          Aantal Behaalde Punten:<br>
          {{model.pointsOne}}<br>
          {{username1}}
        </div>
      </div>
      <div class= {{if (eq model.activePlayer 2) "score red" "score"}}>
        <div class="multiScore">
          Aantal Behaalde Punten:<br>
          {{model.pointsTwo}}<br>
          {{username2}}
        </div>
      </div>
    </div>
    <br>
    <div class="multiScore">
      {{#if (eq model.activePlayer 1)}}
        {{username1}} moet gooien!
      {{else}}
        {{username2}} moet gooien!
      {{/if}}
    </div>
    <div class="footer navbar-fixed-bottom">
      <div class="support-img">
        {{#link-to "application"}}
          <a href {{action "stop"}}><img src="./assets/images/Stop.svg" alt="stop" class="back"></a>
        {{/link-to}}
      </div>
    </div>
  {{/if}}
  {{#if (eq gamestate "2")}}
    <div class="end">
      Bedankt voor het spelen!<br>Wil je opnieuw spelen?
    </div>
    <br>
    <div class="container">
      <div class="inbl">
        <a href {{action "replayMultiple"}}><img src="./assets/images/Yes.svg" alt="yes" class="yesNo"></a>
        <a href {{action "homepage"}}><img src="./assets/images/No.svg" alt="no" class="yesNo"></a>
      </div>
    </div>
    <div class="end">
      {{username1}} heeft {{model.pointsOne}} punten behaald.<br>
      {{username2}} heeft {{model.pointsTwo}} punten behaald.
    </div>
  {{/if}}

{{/if}}
